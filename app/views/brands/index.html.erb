<p id="notice"><%= notice %></p>

<h1>Brands</h1>

<%= form_tag(brands_path, method: "get") do %>
<p>
  <%= label_tag :search_name, "銘柄" %>
  <%= text_field_tag :search_name, params[:search_name] %>
  <%= label_tag :search_region, "エリア" %>
  <%= select_tag('search_region', options_from_collection_for_select(@region, 'id', 'region_name', params[:search_region]), :include_blank => true)%>
  <%= label_tag :search_type, "タイプ" %>
  
  <%= submit_tag '検索' %>
</p>
<% end %>

<div class="table-responsive">
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th>銘柄</th>
        <th>エリア</th>
        <th>都道府県</th>
        <th>タイプ</th>
        <th><%= sortable "evaluation", "評価" %></th>
        <th><%= sortable "price", "価格" %></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @brands.each do |brand| %>
        <tr>
          <td><%= link_to brand.brand_name, brand_path(brand) %></td>
          <td><%= get_region_name(brand.prefecture_id) %></td>
          <td><%= get_prefecture_name(brand.prefecture_id) %></td>
          <td><%= brand.type_id_i18n %></td>
          <td><%= brand.evaluation_i18n %></td>
          <td><%= brand.price %>円</td>
          <td><%= link_to '更新', edit_brand_path(brand) %></td>
          <td><%= link_to '削除', brand, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to '新規作成', new_brand_path %>
